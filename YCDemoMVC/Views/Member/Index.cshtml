			<th>Birthday <i class="fa fa-sort"></i></th>
			<th>IdentityNumber</th>
			<th>Email <i class="fa fa-sort"></i></th>
			<th>PhoneNumber</th>
			<th>Address</th>
			<th>Action</th>
		</tr>
	</thead>
	<tbody>
	@{ var number = 1;}
	@if (Model.Members.Any())
	{
		foreach (var member in Model.Members)
		{
			<tr>
				<td>@number</td>
				<td>@member.Name</td>
				<td>@member.Sex</td>
				<td>@member.Birthday</td>
				<td>@member.IdentityNumber</td>
				<td>@member.Email</td>
				<td>@member.PhoneNumber</td>
				<td>@member.Address</td>
				<td>
					<button class="btn-primary" value="@member.Id">Edit</button>
					<button class="btn-danger" value="@member.Id">Delete</button>
				</td>
			</tr>
			number++;
		}
	}
	else
	{
		<tr>
			<td colspan="8">No Data</td>
			<td nowrap="nowrap">
				<button class="btn-primary" value="1">Edit</button>
				<button class="btn-danger" value="1">Delete</button>
			</td>
		</tr>
	}
